@switch (ViewModel.ViewMode){
    case ViewMode.Single:
        <View ViewModel="ViewModel.Content"/>
        break;

    case ViewMode.Dual view:
        <DualPanel ShowRightPanel="@(view.DetailPanel is not null)">
            <LeftPanel>
                <View ViewModel="ViewModel.Content"/>
            </LeftPanel>
            <RightPanel>
                @if (view.DetailPanel is not null){
                    <View ViewModel="view.DetailPanel"/>
                }
            </RightPanel>
        </DualPanel>
        break;
}

@code {

    [Parameter, EditorRequired]
    public required ShellViewModel ViewModel { get; set; }

}